      <%= link_to "Option", edit_encounter_event_option_path(option.event, option.event.encounter, option) %>
    </h4>
    <div class="btn-group">
      <%= link_to "+", new_encounter_event_option_success_event_path(option.event.encounter, option.event, option), class: "btn btn-success" %>
      <%= link_to "+", new_encounter_event_option_failure_event_path(option.event.encounter, option.event, option), class: "btn btn-danger" %>
