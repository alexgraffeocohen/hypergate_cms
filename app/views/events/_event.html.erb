<div class="row">
  <li class="col-xs-6 col-xs-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= link_to "Event", edit_encounter_event_path(event, event.encounter) %>
        </h3>
      </div>
      <div class="panel-body">
        <%= event.description %>
      </div>
      <div class="panel-footer">
        <div class="btn-group">
          <button type="button" class="btn btn-success">Add Option</button>
          <%= link_to "Edit Event", edit_encounter_event_path(event, event.encounter), class: "btn btn-default" %>
        </div>
      </div>
    </div>
    <ul>
      <%= render event.options %>
    </ul>
  </li>
</div>
