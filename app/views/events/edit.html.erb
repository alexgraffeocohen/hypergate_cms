<h1>
  Edit Event

  <div class="resource__actions pull-right">
    <%= link_to "Add Option", new_encounter_event_option_path(@presenter.encounter, @presenter.event), class: "btn btn-success" %>
    <% unless @presenter.starting_event? %>
      <%= link_to("Delete",
                  encounter_event_path(@presenter.encounter, @presenter.event),
                  method: :delete,
                  class: "btn btn-danger",
                  data: { confirm: "Are you sure? This will delete all associated options and their events." }) %>
    <% else %>
      <div class="tooltip-wrapper" data-toggle="tooltip" data-placement="left" data-title="Cannot delete starting event of Encounter.">
        <button class="btn btn-danger" disabled>
          Delete
        </button>
      </div>
    <% end %>
  </div>
</h1>
<hr />

<%= render partial: "form" %>
