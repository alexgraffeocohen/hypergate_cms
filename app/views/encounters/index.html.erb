<div class="row">
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col-md-2">Title</th>
        <th class="col-md-1">Category</th>
        <th class="col-md-7">Description</th>
        <th class="col-md-2">Actions</th>
      </tr>
      <tbody>
        <% @encounters.each do |encounter| %>
          <% presenter = EncounterPresenter.new(encounter) %>
          <tr>
            <td><%= presenter.title %></td>
            <td><%= presenter.category %></td>
            <td><%= presenter.description %></td>
            <td>
              <%= link_to("Edit", edit_encounter_path(encounter), class: "btn btn-info") %>
              <%= link_to("Delete", encounter_path(encounter), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" }) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
