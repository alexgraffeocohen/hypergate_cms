<div class="container">
  <div class="row">
    <%= render partial: "layouts/flash_messages" %>
  </div>

  <div class="row">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to("Hypergate", encounters_path, class: "navbar-brand") %>
        </div>

        <ul class="nav navbar-nav">
          <li class="active"><%= link_to("All Encounters", encounters_path) %></li>
          <li><%= link_to("New Encounter", new_encounter_path) %></li>
        </ul>
      </div>
    </nav>
  </div>

  <div class="row">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th class="col-md-2">Category</th>
          <th class="col-md-8">Description</th>
          <th class="col-md-2">Actions</th>
        </tr>
      <tbody>
        <% @encounters.each do |encounter| %>
          <tr>
            <td><%= encounter.category.name %></td>
            <td><%= encounter.description %></td>
            <td><%= link_to("Delete", encounter_path(encounter), method: :delete, data: { confirm: "Are you sure?" }) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
