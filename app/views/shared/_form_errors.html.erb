<% if errors.any? %>
  <div class="panel panel-danger" id="error_explanation">
    <div class="panel-heading">
      <h3 class="panel-title">Submission Error</h3>
    </div>

    <div class="panel-body">
      <ul>
        <% errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
